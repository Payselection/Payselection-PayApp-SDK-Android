<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.checkout.CheckoutFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/checkout_title"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFeatureSettings="pnum, lnum"
                android:fontFamily="@font/raleway_700"
                android:textAlignment="center"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cards"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/price"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    />

                <TextView
                    android:id="@+id/totalPriceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_297"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:gravity=""
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/delivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/delivery"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    />

                <TextView
                    android:id="@+id/deliveryValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_149"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:gravity=""
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/nds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nds"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    />

                <TextView
                    android:id="@+id/ndsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_0"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:gravity=""
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/sale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sale"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    />

                <TextView
                    android:id="@+id/saleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_0"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:gravity=""
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="24sp"
                    />

                <TextView
                    android:id="@+id/totalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_446"
                    android:fontFamily="@font/raleway_700"
                    android:fontFeatureSettings="pnum, lnum"
                    android:textSize="24sp"
                    android:gravity=""
                    />
            </LinearLayout>

            <Button
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginBottom="48dp"
                android:text="@string/pay"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="@font/raleway_600"
                android:fontFeatureSettings="pnum, lnum"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/bg_button"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>